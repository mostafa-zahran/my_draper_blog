<% @result[:objects].each do |post| %>
  <div class="card post-card" id="post-short-<%= post[:id] %>">
    <%= render 'post_element', post: post %>
  </div>
  <div class="card post-card" id="post-full-<%= post[:id] %>" style="display: none"></div>
  <div class="card post-card" id="post-form-<%= post[:id] %>" style="display: none"></div>
<% end %>